<h1>Listing pay_periods</h1>

<table>
  <thead>
    <tr>
      <th>Start date</th>
      <th>End date</th>
      <th>Total hours worked</th>
      <th>Gross wages</th>
      <th>Total deductions</th>
      <th>Net wages</th>
      <th>Name</th>
      <th>Employee</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pay_periods.each do |pay_period| %>
      <tr>
        <td><%= pay_period.start_date %></td>
        <td><%= pay_period.end_date %></td>
        <td><%= pay_period.total_hours_worked %></td>
        <td><%= pay_period.gross_wages %></td>
        <td><%= pay_period.total_deductions %></td>
        <td><%= pay_period.net_wages %></td>
        <td><%= pay_period.name %></td>
        <td><%= pay_period.employee_id %></td>
        <td><%= link_to 'Show', pay_period %></td>
        <td><%= link_to 'Edit', edit_pay_period_path(pay_period) %></td>
        <td><%= link_to 'Destroy', pay_period, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

